{
  "env": {},
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "LS",
      "List",
      "Find",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(npm run test:*)",
      "Bash(yarn:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(grep:*)",
      "WebFetch",
      "WebSearch",
      "Task",
      "Agent"
    ],
    "deny": [
      "Read(./secrets/**)",
      "Read(./**/.env)",
      "Read(./config/credentials.json)",
      "Read(./node_modules/**)",
      "Read(./build/**)",
      "Write(./build/**)",
      "Read(./dist/**)",
      "Write(./dist/**)",
      "Read(./.next/**)",
      "Read(./target/**)",
      "Write(./production.config.*)",
      "Write(./prod.config.*)",
      "Edit(./production.config.*)",
      "Edit(./kubernetes/**)",
      "Edit(./terraform/**)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(:*deploy:*)",
      "Bash(:*publish:*)"
    ],
    "ask": []
  },
  "model": "opus",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit(*.js)|Write(*.js)",
        "hooks": [
          {
            "type": "command",
            "command": "prettier --write \"$CLAUDE_FILE_PATHS\" 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Edit(*.ts)|Edit(*.tsx)",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_FILE_PATHS\" =~ \\.(ts|tsx)$ ]]; then npx tsc --noEmit --skipLibCheck \"$CLAUDE_FILE_PATHS\" 2>&1 || echo '‚ö†Ô∏è  TypeScript errors detected - please review'; fi"
          }
        ]
      },
      {
        "matcher": "Edit(*.py)|Write(*.py)",
        "hooks": [
          {
            "type": "command",
            "command": "python -m black \"$CLAUDE_FILE_PATHS\" 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "python -m flake8 \"$CLAUDE_FILE_PATHS\" 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Edit(*.json)|Write(*.json)",
        "hooks": [
          {
            "type": "command",
            "command": "for file in $CLAUDE_FILE_PATHS; do jq empty \"$file\" 2>/dev/null || echo \"‚ö†Ô∏è  Invalid JSON in $file\"; done"
          }
        ]
      }
    ],
    "PreToolUse": [],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'üöÄ Claude Code session started in $CLAUDE_PROJECT_DIR'"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "shared-tools@stat-ai": false,
    "database-developer-tools@stat-ai": true,
    "developer-tools@stat-ai": true,
    "project-manager-tools@stat-ai": true,
    "qa-tools@stat-ai": true,
    "web-developer-tools@stat-ai": true
  },
  "extraKnownMarketplaces": {},
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": false,
    "network": {
      "allowUnixSockets": []
    },
    "excludedCommands": []
  },
  "spinnerTipsEnabled": true,
  "alwaysThinkingEnabled": true,
  "maxTokens": 4096,
  "autoAcceptPermissions": false,
  "projectName": "",
  "defaultBranch": "develop",
  "testCommand": "npm test",
  "lintCommand": "npm run lint",
  "buildCommand": "npm run build",
  "_metadata": {
    "version": "1.0.0",
    "description": "Claude Code settings for [project name]",
    "lastModified": "2025-10-23",
    "author": "Kurt Wolf <kwolf@gohcl.com>"
  }
}
